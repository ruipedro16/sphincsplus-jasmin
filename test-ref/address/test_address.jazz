}

export fn set_tree_height_jazz(reg ptr u32[8] addr, reg u32 tree_height) -> reg ptr u32[8] {
    addr = __set_tree_height(addr, tree_height);
    return addr;
}

export fn set_tree_index_jazz(reg ptr u32[8] addr, reg u32 tree_index) -> reg ptr u32[8] {
    addr = __set_tree_index(addr, tree_index);
    return addr;
}